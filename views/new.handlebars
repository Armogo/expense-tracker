<main class="new-container">
  <form action="/expense-tracker" method="POST" id="new">
    <section>
      <span>*必填欄位</span>
      <span>請輸入你的支出</span>
    </section>
    
    <div>
      <label for="name">名稱* :</label>
      <input type="text" id="name" name="name">
    </div>

    <div>
      <label for="date">日期* :</label>
      <input type="date" id="date" name="date">
    </div>

    <div>
      <label for="category">類別* :</label>
      <select name="category" id="category">
        <option value="">Select</option>
        <option value="">家居物業</option>
        <option value="">交通出行</option>
        <option value="">休閒娛樂</option>
        <option value="">餐飲食品</option>
        <option value="">其他</option>
      </select>
    </div>

    <div>
      <label for="amount">金額* :</label>
      <input type="number" id="amount" name="amount" value="">
    </div>
  </form>
</main>

<aside>
  <button type="submit" form="new" class="new-expense-btn">新增支出</button>
</aside>
