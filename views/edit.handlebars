<main class="new-container">
  <form action="/expense-tracker/{{record._id}}?_method=PUT" method="POST" id="edit">
    <section>
      <span>*必填欄位</span>
      <span>請修改你的支出</span>
    </section>

    <div>
      <label for="name">名稱* :</label>
      <input type="text" id="name" name="name" value="{{record.name}}">
    </div>

    <div>
      <label for="date">日期* :</label>
      <input type="date" id="date" name="date" value="{{date}}">
    </div>

    <div>
      <label for="category">類別* :</label>
      <select name="category" id="category">
        {{#each category}}
          {{!-- 讓option自動顯示該筆record的類型 --}}
          <option {{#if this.match}} selected="selected" {{/if}}>{{this.category}}</option> 
        {{/each}}
      </select>
    </div>

    <div>
      <label for="amount">金額* :</label>
      <input type="number" id="amount" name="amount" value="{{record.amount}}">
    </div>
  </form>
</main>

<aside>
  <button type="submit" form="edit" class="new-expense-btn">送出</button>
</aside>