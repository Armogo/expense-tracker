  <form action="/expense-tracker/{{record._id}}?_method=PUT" method="POST" id="edit" class="container">
    
    <div class="row justify-content-center mt-5">
      <div class="col-3 col-lg-2 text-center" style="font-size: 1.2em;">*必填欄位</div>
      <div class="col-5 col-lg-4 text-center" style="font-size: 1.2em;">請修改你的支出</div>
    </div>

    <div class="form-group row align-items-center justify-content-center mt-4">
      <label for="name" class="col-3 col-lg-2 text-center " style="font-size: 1.2em;">名稱*：</label>
      <input type="text" name="name" id="name" placeholder="請輸入名稱" value="{{record.name}}" class="col-5 col-lg-4 form-control-lg" required>
    </div>

    <div class="form-group row align-items-center justify-content-center mt-4">
      <label for="date" class="col-3 col-lg-2 text-center " style="font-size: 1.2em;">日期*：</label>
      <input type="date" name="date" id="date" placeholder="請輸入日期" value="{{date}}" class="col-5 col-lg-4 form-control-lg" required>
    </div>

    <div class="form-group row align-items-center justify-content-center mt-4">
      <label for="category" class="col-3 col-lg-2 text-center" style="font-size: 1.2em;">類別*：</label>
      <div class="form-group col-5 col-lg-4 form-control-lg px-0">
        <select class="form-select" style="font-size: 1.2em; width: 15em;" name="category" id="category">
          {{#each category}}
          {{!-- 讓option自動顯示該筆record的類型 --}}
          <option {{#if this.match}} selected="selected" {{/if}}>{{this.category}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="form-group row align-items-center justify-content-center mt-4">
      <label for="amount" class="col-3 col-lg-2 text-center" style="font-size: 1.2em;">金額*：</label>
      <div class="form-group col-5 col-lg-4 px-0">
        <div class="input-group">
          <input type="number" name="amount" id="amount" class="form-control-lg" style="font-size: 1.2em; width: 20em;" value="{{record.amount}}" min="0" required>
        </div>
      </div>
    </div>

    <div class="row justify-content-center mt-4">
      <button type="submit" class="btn btn-info btn-lg border border-dark col-5" form="edit" style="max-width: 290px;">送出</button>
    </div>

</form>